{
    "manifest_version": 2,
    "name": "BugzillaJS",
    "version": "4.2.0",

    "description": "Add features to Bugzilla.",

    "developer": {
        "name": "Gregory Koberger, Matthew Noorenberghe",
        "url": "https://github.com/gkoberger/BugzillaJS"
    },

    "applications": {
        "gecko": {
            "id": "jid0-NgMDcEu2B88AbzZ6ulHodW9sJzA@jetpack",
            "strict_min_version": "57.0"
        }
    },

    "content_scripts": [
        {
            "matches": [
                "*://*/",
                "*://*/*bug*/",
                "*://*/*.cgi*"
            ],
            "include_globs": [
                "*bugz*",
                "*bugs*",
                "*Bugs*",
                "*bz*"
            ],
            "css": [
                "css/bugzillajs.css"
            ],
            "js": [
                "js/jquery.js",
                "js/jquery.scrollTo.js",
                "js/md5.js",
                "js/bugzilla-defs.js",
                "js/bugzilla.js",
                "js/bugzilla-images.js",
                "js/bugzilla-listingpage.js",
                "js/bugzilla-gravatars.js",
                "js/bugzilla-comments.js",
                "js/bugzilla-misc.js"
            ]
        }
    ],

    "icons": {
        "32": "icon.png",
        "64": "icon64.png"
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },

    "permissions": [
        "https://api.github.com/*",
        "storage"
    ]
}
